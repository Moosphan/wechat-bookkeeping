.splashPage {
  height: 100%;
  align-items: center;
  display: flex;
  flex-direction: column;
  background-color: #f8d300;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border: lightblue;
  border-style: solid;
  border-radius: 50%;
  border-color: white;
  border-width: 2px
}

.userinfo-nickname {
  color: white;
}
.splash-image {
  margin-top: 200rpx;
}
.bottomContainer {
  height: 60px;
  margin-top: 120rpx;
  position: relative;
 
}
.btnImg {
  width: 180px;
  height: 50px;
  z-index: 1;
  position: fixed;
  margin: 0px auto;
  right: 0px;
  left: 0px
}

