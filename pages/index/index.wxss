.buttonHome {
  width: 223px;
  height: 60px;
  background: transparent;
  border: 0 solid transparent;
  z-index: 1;
  position: fixed;
  margin: 0px auto;
  right: 0px;
  left: 0px;
  opacity: 0 
}
.dialog-container {
  width: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  bottom: 0;
  left: 0;
  z-index: 2;
  background-color: white;
  box-shadow: 0px 4px 0px 0px whitesmoke
}

.about-container {
  margin-top: 20rpx;
}

.about-name {
  margin-top: 30rpx;
