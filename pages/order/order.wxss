}

.phone {
  width: 50%;
  padding-left: 20px;
  padding-bottom: 10px;
  /* position: absolute; */
  color: #cccccc;
  /* margin-top: 78px; */
  /* z-index: 1; */
  font-size: 14px;
  display: flex;
  flex-direction: row;
  align-items: center
}

.phone-icon {
  width: 16px;
  height: 18px;
  margin-right: 10px;
}

.addButton {
  width: 60px;
  height: 60px;
  float: right;
  position: fixed;
  bottom: 0;
